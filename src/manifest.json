{
  "manifest_version": 3,
  "name": "DMM Extension",
  "version": "0.0.1",
  "description": "DMMお気に入りページの拡張",
  "action": {
    "default_title": "DMM Extension"
  },
  "content_scripts": [
    {
      "matches": [
        "https://book.dmm.co.jp/bookmark/*",
        "https://book.dmm.com/bookmark/*"
      ],
      "js": ["book.js"],
      "css": ["style.css"]
    },
    {
      "matches": [
        "https://book.dmm.com/list/*",
        "https://book.dmm.com/search/*"
      ],
      "js": ["search.js"],
      "css": ["style.css"]
    }
  ],
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  }
}
